                <label asp-for="Parks.Area" class="control-label"></label>
                <input asp-for="Parks.Area" class="form-control" />
                <span asp-validation-for="Parks.Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parks.Rating" class="control-label"></label>
                <input asp-for="Parks.Rating" class="form-control" />
                <span asp-validation-for="Parks.Rating" class="text-danger"></span>
